{{ define "main" }}{
"title": {{ .Title | jsonify  }},
"description": {{ .Description | jsonify  }},
"items": [{{ range $index, $e := sort (.Params.related) "Title" "asc" }}{{ if $index }},{{ end }}{
    "id": {{ $index | jsonify }},
	"title": {{ .title | jsonify }},
	"url": {{ .url | jsonify }},
	"image": {{ .image | jsonify }},{{ with .Params.variants }}{{ range first 1 . }}{{ if ne .discount "" }}
	"promo": {{ lang.NumFmt 0 (add .price .discount) "- , ." | jsonify }},{{ end }}
	"price": {{ lang.NumFmt 0 .price "- , ." | jsonify }},{{ end }}{{ end }}
    "date_published": {{ .Date.Format "2006-02-01T15:04:05-0700" | jsonify }}
}{{ end }}]
}{{ end }}